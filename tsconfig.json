{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": ".build",
    "baseUrl": "src",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
